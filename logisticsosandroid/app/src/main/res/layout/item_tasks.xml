<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@drawable/bg_card" android:padding="12dp">

    <TextView
        android:id="@+id/tvTitle" android:layout_width="0dp" android:layout_height="wrap_content"
        android:textStyle="bold" android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toStartOf="@id/ivCheck"
        app:layout_goneMarginEnd="12dp"/>

    <TextView
        android:id="@+id/tvAddr" android:layout_width="0dp" android:layout_height="wrap_content"
        android:textColor="@color/text_secondary"
        app:layout_constraintTop_toBottomOf="@id/tvTitle" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ivCheck"/>

    <TextView
        android:id="@+id/tvTime" android:layout_width="0dp" android:layout_height="wrap_content"
        android:textColor="@color/text_secondary"
        app:layout_constraintTop_toBottomOf="@id/tvAddr" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ivCheck" app:layout_goneMarginEnd="12dp"/>

    <ImageView
        android:id="@+id/ivCheck" android:layout_width="28dp" android:layout_height="28dp"
        android:background="@drawable/circle_yellow_border"
        app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>